<!-- Portfolio ==================================================
================================================== -->
<div class="container portfolio">
    <% sayac=0 %>
    <% @Uruns.each do |urun| %>
            <% if(sayac==2) %>
                <div class="one_third lastcolumn shadow">
            <% else %>
                <div class="one_third shadow">
            <% end %>
                <div class="view view-first"> 
                    <center><%= image_tag urun.resim.url(:medium) , :class => "satir_resim"%></center>
                  <div class="mask">
                    <h2><a href="#">Ürün</a></h2>
                    <p><%= urun.baslik %></p>
                    <p><%= urun.aciklama %></p>
                    <p><%= urun.fiyat %></p>
                    <!-- image_tag urun.resim.url(:thumb) if urun.resim? -->
                  </div>
                  <!-- mask ends here --> 
                </div>
                <!-- view ends here --> 
            </div>
            <% if(sayac==2) %>
                </div></br></br><div class="container portfolio">
                <% sayac=0 %>
            <% end %>
        <% sayac +=1 %>
    <% end %>
</div>
<style>
    .satir_resim{
        min-height:180px;
        min-height:220px;
    }
</style>




